{
  "name": "student-finance-simulator",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "scripts": "npm pkg get scripts",
    "test": "jest",
    "test:silent": "jest --silent",
    "test:watch": "jest --watchAll",
    "test:e2e": "jest --bail --runInBand --projects ./tests/e2e",
    "test:e2e:silent": "jest --bail --runInBand --silent --projects ./tests/e2e",
    "test:e2e:watch": "jest --bail --runInBand  --watchAll --projects ./tests/e2e",
    "start:dev": "nodemon src/infra/http/express/index.ts",
    "start:prod": "node build/infra/http/express/index.js",
    "api-docs": "nodemon docs/api/openApi/apiDocs.ts",
    "lint-staged": "lint-staged",
    "lint:check": "biome lint .",
    "format:fix": "biome format --write .",
    "fix": "biome check --write .",
    "build:dev": "tsc",
    "build:dev:incremental": "tsc --incremental -p tsconfig.json",
    "build": "tsc -p tsconfig.json && node buildUtils/minify.js",
    "revise": "npm-run-all --parallel test:silent test:e2e:silent build:dev fix",
    "revise:pre-commit": "npm-run-all --parallel test:silent test:e2e:silent build:dev:incremental lint-staged",
    "lint:dockerfile:windows": "type dockerfile | docker run --rm -i hadolint/hadolint",
    "lint:dockerfile:linux": "cat dockerfile | docker run --rm -i hadolint/hadolint",
    "prepare": "husky"
  },
  "author": "Lucas Felipe Timoteo",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "pino": "^9.3.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.23",
    "uninstall": "^0.0.0",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uglify-js": "^3.17.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^11.2.2",
    "sucrase": "^3.35.0",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "uglify-js": "^3.17.4"
  }
}